<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/survey_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Was the application easy to use?" />

    <RadioGroup
        android:id="@+id/color_options1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/Yes_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <RadioButton
        android:id="@+id/No_option1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No" />

    <TextView
        android:id="@+id/survey_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did you find the application difficult to understand?" />

    <RadioGroup
        android:id="@+id/color_options2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/Yes_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <RadioButton
        android:id="@+id/No_option2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No" />

    <TextView
        android:id="@+id/survey_question3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Was submitting your complaint a simple process?" />

    <RadioGroup
        android:id="@+id/color_options3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/Yes_option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <RadioButton
        android:id="@+id/No_option3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No" />

    <TextView
        android:id="@+id/survey_question4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is there anything in the application that requires improvements?" />

    <RadioGroup
        android:id="@+id/color_options4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioButton
        android:id="@+id/Yes_option4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes" />

    <RadioButton
        android:id="@+id/No_option4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If so what is it?" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type Here">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:text="Submit" />

    <Button
        android:id="@+id/button7"
        android:layout_width="154dp"
        android:layout_height="63dp"
        android:text="Logout"
        android:translationX="260dp"
        android:verticalScrollbarPosition="defaultPosition" />

    <Button
        android:id="@+id/button8"
        android:layout_width="156dp"
        android:layout_height="58dp"
        android:text="Back"
        android:translationY="-60dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="131dp"
        android:layout_height="60dp"
        android:text="Home"
        android:translationX="150dp"
        android:translationY="-50dp" />
</LinearLayout>
